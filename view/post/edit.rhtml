<h2>Edit Blog Post<%== @post.is_draft ? ' (Draft)' : '' %></h2>

<% if @post_error %>
  <div class="flash error"><%== @post_error %></div>
<% end %>

<% if @post %>
  <%= render_template(:form, :form_action => @form_action, :post => @post) %>
  <%= render_template(:full, :post => @post) %>
<% end %>


