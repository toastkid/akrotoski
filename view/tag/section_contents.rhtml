<% posts = tag.posts_and_external_posts(:per_page => 3, :page => 1) %>
<p class="sectiontitle"><a href="/tag/<%= tag.name %>" title="see posts in the '<%= tag.title %>' section"><strong>Latest <%= tag.title %></strong></a></p>
<% if post = posts.shift %>
  <%= render_template "#{'../' if defined?(subfolder) && subfolder}post/summary", :post => post %>
<% end %>

<% posts.each do |post| %>
  <h2 class="secondary"><a href="<%= post.url %>"><%= post.title %></a></h2>    
<% end %>
