          <span class="author">by
            <% if comment.author_url.empty? %>
              <%== comment.author %>
            <% else %>
              <a href="<%== comment.author_url %>" rel="nofollow">
                <%== comment.author %>
              </a>
            <% end %>
          </span>
          <% if post = comment.post %>
            <span class="on">
              on <a href="<%== post.url %>"><%== post.title %></a>
            </span>
