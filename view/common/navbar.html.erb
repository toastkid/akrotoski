  <% @ancestors = [Thoth::Tag.root] if @ancestors.blank? || @ancestors.size < 2 || @ancestors[1].parent_id.blank? %>
  <% ldb "@ancestors = #{@ancestors.inspect}" %>
  <div id="navmain">
    <ul class="navmain1"> 
      <% @ancestors[0].children.each do |tag| %>
        <%= render_template 'common/navbar_li', :tag => tag, :active => @ancestors.include?(tag), :splash => true %>
      <% end %>                  
    </ul>    
    <% @ancestors[1..-1].each do |ancestor| %>
      <% children = ancestor.children %>
      <% if children.size > 0 %>
        <ul class="navsub">   
          <% children.each do |tag| %>
            <%= render_template 'common/navbar_li', :tag => tag, :active => @ancestors.include?(tag) %>
          <% end %>
        </ul>       
      <% end %>
    <% end %>
  </div>
  
